<Window x:Class="Plmeco.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PLMECO Transporte" Height="600" Width="900">

    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Top" Content="Importar Excel" Click="Importar_Click" Margin="5"/>
            <DataGrid x:Name="dgCargas" AutoGenerateColumns="False" CanUserAddRows="False" MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MATRICULA" Binding="{Binding Matricula}" Width="*"/>
                    <DataGridTextColumn Header="DESTINO" Binding="{Binding Destino}" Width="*"/>
                    <DataGridTextColumn Header="MUELLE" Binding="{Binding Muelle}" Width="0.5*"/>
                    <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}" Width="0.5*"/>
                    <DataGridTextColumn Header="LLEGADA REAL" Binding="{Binding LlegadaReal}" Width="0.5*"/>
                    <DataGridTextColumn Header="SALIDA REAL" Binding="{Binding SalidaReal}" Width="0.5*"/>
                    <DataGridTextColumn Header="SALIDA TOPE" Binding="{Binding SalidaTope}" Width="0.5*"/>
                    <DataGridTextColumn Header="INCIDENCIAS" Binding="{Binding Incidencias}" Width="*"/>
                    <DataGridCheckBoxColumn Header="LEX" Binding="{Binding Lex}" Width="0.5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
